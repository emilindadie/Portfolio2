<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">
    <android.support.v7.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="315dp">
        <LinearLayout
            android:id="@+id/topLinear"
            android:gravity="center"
            android:background="@drawable/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.abdularis.civ.CircleImageView
                android:id="@+id/profil_imageView"
                android:layout_gravity="center"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:src="@drawable/profil"
                app:strokeColor="@color/colorAccent"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        app:layout_constraintTop_toBottomOf="@id/card1"
        android:layout_width="match_parent"
        android:layout_height="458dp">

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mail"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_adress"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_below="@+id/linear1"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/phone_image"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:src="@drawable/phone"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_number"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear3"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="80dp"
                android:layout_below="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/github_image"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:src="@drawable/github"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_github"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="80dp"
                android:layout_below="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/linkedin_image"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:src="@drawable/linkedin"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_github"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/linear5"
                android:layout_below="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/view_cv_button"
                    android:layout_width="220dp"
                    android:layout_height="60dp"
                    android:text="@string/view_cv_text"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>